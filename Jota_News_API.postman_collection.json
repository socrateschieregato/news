{
    "info": {
        "name": "Jota News API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Autenticação",
            "item": [
                {
                    "name": "Obter Token",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/token/",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"socrates\",\n    \"password\": \"sua_senha\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Renovar Token",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/token/refresh/",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"refresh\": \"seu_refresh_token\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                }
            ]
        },
        {
            "name": "Verticais",
            "item": [
                {
                    "name": "Criar Vertical",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/verticais/",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Poder\",\n    \"description\": \"Notícias sobre política e poder\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Listar Verticais",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/verticais/",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Notícias",
            "item": [
                {
                    "name": "Criar Notícia",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/news/",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Título da Notícia\",\n    \"subtitle\": \"Subtítulo da Notícia\",\n    \"content\": \"Conteúdo da notícia...\",\n    \"vertical_id\": 1,\n    \"access_type\": \"PUBLIC\",\n    \"is_pro\": false\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        }
                    }
                },
                {
                    "name": "Listar Notícias",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/news/",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ]
                    }
                }
            ]
        },
